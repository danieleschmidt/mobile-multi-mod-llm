{
  "security_settings": {
    "input_validation": {
      "max_file_size_mb": 50,
      "allowed_file_types": [
        ".jpg",
        ".jpeg",
        ".png",
        ".bmp",
        ".webp"
      ],
      "max_text_length": 10000,
      "enable_content_scanning": true
    },
    "rate_limiting": {
      "requests_per_minute": 100,
      "burst_limit": 20,
      "enable_ip_blocking": true
    },
    "authentication": {
      "require_api_key": true,
      "key_rotation_days": 90,
      "enable_2fa": false
    },
    "logging": {
      "log_level": "INFO",
      "mask_sensitive_data": true,
      "audit_trail": true,
      "retention_days": 90
    },
    "encryption": {
      "algorithm": "AES-256-GCM",
      "key_derivation": "PBKDF2",
      "salt_length": 32
    }
  },
  "compliance": {
    "gdpr_compliant": true,
    "ccpa_compliant": true,
    "data_retention_days": 365,
    "user_consent_required": true
  }
}