# Mobile Multi-Modal LLM Environment Configuration

# Model Configuration
MODEL_NAME=mobile-mm-llm-base
MODEL_PATH=models/
EMBED_DIM=384
IMAGE_SIZE=224

# Device Configuration
DEVICE=cpu
USE_CUDA=false
USE_HEXAGON=false
USE_NEURAL_ENGINE=false

# Quantization Settings
QUANTIZATION_SCHEME=none
INT2_CALIBRATION_SAMPLES=1000
ENABLE_DYNAMIC_QUANTIZATION=false

# Training Configuration
BATCH_SIZE=8
LEARNING_RATE=1e-4
MAX_EPOCHS=100
GRADIENT_ACCUMULATION_STEPS=1
MIXED_PRECISION=false

# Data Paths
TRAIN_DATA_PATH=data/train/
VAL_DATA_PATH=data/val/
TEST_DATA_PATH=data/test/
CACHE_DIR=cache/
MODELS_DIR=models/

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
MAX_REQUEST_SIZE=10485760

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/mobile_multimodal.log
ENABLE_TENSORBOARD=false
TENSORBOARD_DIR=runs/

# Performance Tuning
NUM_WORKERS=4
PREFETCH_FACTOR=2
PIN_MEMORY=true
PERSISTENT_WORKERS=true

# Mobile Platform Specific
ANDROID_SDK_PATH=/opt/android-sdk
IOS_DEPLOYMENT_TARGET=14.0
HEXAGON_SDK_PATH=/opt/hexagon-sdk

# Security
MODEL_ENCRYPTION_KEY=""
ENABLE_MODEL_SIGNING=false
TRUSTED_MODEL_SOURCES=huggingface.co,github.com

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_MONITORING=true

# Development
DEBUG=false
ENABLE_PROFILING=false
MEMORY_PROFILING=false
BENCHMARK_MODE=false

# Hexagon NPU Configuration
HEXAGON_COMPUTE_UNIT=HVX
HEXAGON_PRECISION=INT2
HEXAGON_PERFORMANCE_PROFILE=balanced

# iOS Neural Engine Configuration
COREML_COMPUTE_UNIT=cpuAndNeuralEngine
COREML_PRECISION=Float16

# Android Configuration
TFLITE_DELEGATE=hexagon
TFLITE_NUM_THREADS=4
TFLITE_USE_XNNPACK=true

# Cloud Integration (Optional)
CLOUD_STORAGE_BUCKET=""
MODEL_REGISTRY_URL=""
TELEMETRY_ENDPOINT=""

# Development Tools
JUPYTER_PORT=8888
TENSORBOARD_PORT=6006
MLFLOW_TRACKING_URI=""

# Dataset Configuration
DATASET_FORMAT=coco
MAX_CAPTION_LENGTH=50
MAX_QUESTION_LENGTH=20
IMAGE_AUGMENTATION=true
AUGMENTATION_PROBABILITY=0.5

# Export Configuration
EXPORT_BATCH_SIZE=1
ONNX_OPSET_VERSION=16
TORCHSCRIPT_OPTIMIZE_FOR_MOBILE=true
TFLITE_REPRESENTATIVE_DATASET_SIZE=100

# Testing Configuration
TEST_ITERATIONS=100
BENCHMARK_WARMUP_ITERATIONS=10
ACCURACY_THRESHOLD=0.95
PERFORMANCE_REGRESSION_THRESHOLD=0.05